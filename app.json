{
  "expo": {
    "name": "Leaf Detective",
    "slug": "RiceDiseaseDetector",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/leaf-detective-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/leaf-detective-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.knnsu.LeafDetective",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select images for disease detection.",
          "cameraPermission": "The app accesses your camera to let you take photos of rice plants."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Leaf Detective to save photos to your gallery.",
          "savePhotosPermission": "Allow Leaf Detective to save photos to your gallery.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "@react-native-google-signin/google-signin"
    ],
    "extra": {
      "eas": {
        "projectId": "3fa42706-3d7c-4c7b-9697-5deaeb21f16f"
      }
    }
  }
}